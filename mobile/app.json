{
  "expo": {
    "name": "INVADE",
    "slug": "invade-territory-runner",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "invade",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "backgroundColor": "#0A0A0F",
    "primaryColor": "#6C5CE7",
    
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6C5CE7"
    },
    
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/your-project-id"
    },
    
    "assetBundlePatterns": [
      "**/*"
    ],
    
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.intvlinvade.app",
      "buildNumber": "1.0.0",
      "googleServicesFile": "./ios/GoogleService-Info.plist",
      "infoPlist": {
        "UIBackgroundModes": ["location", "fetch", "remote-notification"],
        "NSLocationWhenInUseUsageDescription": "INVADE needs your location to track your runs and capture zones on the map.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "INVADE needs your location to track your runs even when the app is in the background.",
        "NSLocationAlwaysUsageDescription": "INVADE needs your location to track your runs in the background.",
        "NSMotionUsageDescription": "INVADE uses motion data to track your running activity.",
        "NSCameraUsageDescription": "INVADE uses the camera to capture photos of your runs to share.",
        "NSPhotoLibraryUsageDescription": "INVADE accesses your photos to let you share run memories.",
        "NSUserNotificationUsageDescription": "INVADE sends you notifications about your runs, achievements, and friend activity.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.914047828656-c34ea9435275cead097175"
            ]
          },
          {
            "CFBundleURLSchemes": [
              "com.intvlinvade.app"
            ]
          }
        ]
      },
      "associatedDomains": [
        "applinks:invadetheland.app",
        "applinks:www.invadetheland.app"
      ]
    },
    
    "android": {
      "package": "com.intvlinvade.app",
      "versionCode": 1,
      "googleServicesFile": "./android/app/google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6C5CE7"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM",
        "POST_NOTIFICATIONS"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "invadetheland.app",
              "pathPrefix": "/"
            },
            {
              "scheme": "https",
              "host": "www.invadetheland.app",
              "pathPrefix": "/"
            },
            {
              "scheme": "com.intvlinvade.app",
              "host": "auth",
              "pathPrefix": "/callback"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow INVADE to use your location to track your runs.",
          "locationAlwaysPermission": "Allow INVADE to use your location to track your runs even in the background.",
          "locationWhenInUsePermission": "Allow INVADE to use your location to track your runs.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6C5CE7",
          "sounds": ["./assets/sounds/notification.wav"],
          "mode": "production"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow INVADE to access your microphone for voice coaching."
        }
      ]
    ],
    
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    
    "runtimeVersion": {
      "policy": "appVersion"
    },
    
    "jsEngine": "hermes",
    
    "experiments": {
      "tsconfigPaths": true,
      "typedRoutes": true
    }
  }
}
